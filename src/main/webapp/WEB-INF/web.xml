<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Jeeproject</display-name>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>
	
	<!-- La page d'accueil est index.jsp -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>org.flst.servlets.Home</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Result</servlet-name>
		<servlet-class>org.flst.servlets.Result</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Results</servlet-name>
		<servlet-class>org.flst.servlets.Results</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Product</servlet-name>
		<servlet-class>org.flst.servlets.Product</servlet-class>
	</servlet>

	<!-- La Servlet Home est liée à l'url /home -->
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Result</servlet-name>
		<url-pattern>/result</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Results</servlet-name>
		<url-pattern>/results</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Product</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>
</web-app>

